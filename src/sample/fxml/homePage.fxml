<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.scene.text.Font?>
<?import javafx.geometry.Insets?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="sample.controller.HomeController"
            >
    <VBox AnchorPane.topAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.bottomAnchor="10" spacing="15">
        <HBox spacing="15" alignment="CENTER_LEFT">
            <FontAwesomeIconView glyphName="STAR" fill="#fff884" glyphSize="32"/>
            <Label text="Best rating Books" textFill="dimgrey">
                <font>
                    <Font name="SansSerif Bold" size="22.0" />
                </font>
            </Label>
        </HBox>

        <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS" fitToHeight="true">
            <padding>
                <Insets topRightBottomLeft="25"></Insets>
            </padding>
                <FlowPane fx:id="booksPane"/>

        </ScrollPane>

    </VBox>

</AnchorPane>
